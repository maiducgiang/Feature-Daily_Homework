<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    
                                              
                                                 
                                                  
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Screen2" android:tag="layout/activity_screen2_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/textview_screen2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên là @{name}"

            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_screen2_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã di chuyển tới: @{schedule}"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_screen2_name" />

        <TextView
            android:id="@+id/textView_screen2_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã tiếp xúc với: @{contact}"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_screen2_schedule" />
        <Button
            android:id="@+id/button_screen2_next1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            app:layout_constraintTop_toBottomOf="@id/textView_screen2_contact"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
         