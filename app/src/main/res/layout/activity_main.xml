<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView_main_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ho_va_ten2"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="54dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/edittext_main_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/ho_va_ten"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="54dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_main_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:inputType="text"
            android:autofillHints="" />

        <TextView
            android:id="@+id/textView_main_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lich_trinh_di_lai_trong_24h"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="54dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_main_name"/>

        <EditText
            android:id="@+id/edittext_main_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/lich_trinh"
            android:inputType="text"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="54dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_main_schedule"
            app:layout_constraintLeft_toLeftOf="parent"
            android:autofillHints="" />
        <TextView
            android:id="@+id/textView_main_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/da_tiep_xuc_voi"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="54dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_main_schedule"/>
        <RadioGroup
            android:id="@+id/radiogroup_main_contact"
            android:checkedButton="@id/radioButton_main_f0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/textView_main_contact"
            app:layout_constraintLeft_toLeftOf="parent">
            <RadioButton
                android:id="@+id/radioButton_main_f1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/f1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_main_contact"/>
            <RadioButton
                android:id="@+id/radioButton_main_f0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/f0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/radioButton_main_f1"
                app:layout_constraintTop_toBottomOf="@id/textView_main_contact"/>
            <RadioButton
                android:id="@+id/radioButton_main_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                app:layout_constraintLeft_toLeftOf="@id/radioButton_main_f1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_main_contact"/>
        </RadioGroup>
        <Button
            android:id="@+id/button_main_nextscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radiogroup_main_contact"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>