<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="name" type="String" />
        <variable name="add" type="String" />
        <variable name="photo" type="String" />
        <variable name="follower" type="String" />
        <variable name="follow" type="String" />
        <variable name="codeCheck" type="String" />
        <variable name="texthello" type="String" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textview_main_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/my_profile"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <EditText
            android:id="@+id/edittext_main_nextpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="demo"
            android:inputType="text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <Button
            android:id="@+id/button_main_nextpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/imageview_main_avatar"
            android:layout_width="103dp"
            android:layout_height="117dp"
            android:contentDescription="@string/yeb"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_main_nextpage"
            app:srcCompat="@drawable/anh2" />

        <TextView
            android:id="@+id/textview_main_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{name}"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageview_main_avatar" />

        <TextView
            android:id="@+id/textview_main_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{add}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_main_name" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_main_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="textview_main_follow,textview_main_follower,
            textview_main_photo, textview_main_numberfollow, textview_main_numberfollower, textview_main_numberhoto"/>
        <Button
            android:id="@+id/button_main_checkgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{codeCheck}"
            app:layout_constraintTop_toBottomOf="@id/textview_main_address"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/textview_main_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/follower"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_main_checkgroup" />
        <TextView
            android:id="@+id/textview_main_numberfollower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{follower}"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/textview_main_follower"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_main_follower" />

        <TextView
            android:id="@+id/textview_main_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/follow"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@id/textview_main_follower"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_main_checkgroup" />
        <TextView
            android:id="@+id/textview_main_numberfollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{follow}"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_main_follower" />

        <TextView
            android:id="@+id/textview_main_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photo"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textview_main_follower"
            app:layout_constraintTop_toBottomOf="@id/button_main_checkgroup" />


        <TextView
            android:id="@+id/textview_main_numberhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{photo}"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textview_main_follower"
            app:layout_constraintTop_toBottomOf="@id/textview_main_follower"/>



        <ImageView
            android:id="@+id/imageview_main_list1"
            android:layout_width="203dp"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/textview_main_numberfollow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/anh5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageview_main_list2"
            android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/imageview_main_list2"
            android:layout_width="203dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/anh6"
            app:layout_constraintTop_toBottomOf="@id/textview_main_numberfollow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageview_main_list1"
            android:contentDescription="@string/todo" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>